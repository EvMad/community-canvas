<div class="columns">

{{! empty column }}
    <div class="column"></div>

{{! "center" column for image cards }}
    <div class="column">

        {{! cloudinary upload widget  }}
<button id="upload_widget" class="cloudinary-button">Upload files</button>

{{! basic bulma image card placeholder  }}
<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
    </figure>
  </div>
</div>

{{! attempt to fetch stored image from cloud  }}
<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="https://res.cloudinary.com/cloudcontrol/{{name}}.jpeg/fetch/" alt="Placeholder image">
    </figure>
  </div>
</div>

{{! end center column}}
</div>

{{! empty column }}
 <div class="column"></div>

</div>

    


<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script> 
<script src="/public/js/photos.js"></script>